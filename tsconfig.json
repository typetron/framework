{
	"compilerOptions": {
		"module": "commonjs",
        "target": "ES2023",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"strictPropertyInitialization": false,
		"forceConsistentCasingInFileNames": true,
		//		"useDefineForClassFields": true, // TODO some tests fail when using this flag
		"declarationMap": true,
		//		"noUnusedLocals": true,
		//		"noUnusedParameters": true,
        "outDir": "./build",
		"noImplicitAny": true,
		//		"noUncheckedIndexedAccess": true,
		"moduleResolution": "node",
		"lib": [
			"esnext"
		],
		"types": [
			"reflect-metadata",
			"@types/node"
		],
		"baseUrl": ".",
		"paths": {
			"@Typetron/*": [
				"*"
			]
		}
	},
    "files": [
        "types.d.ts"
    ],
    "include": [
		"Cache",
		"Container",
		"Database",
		"Encryption",
		"Forms",
		"Framework",
		"Models",
        "Mail",
		"Router",
		"Storage",
		"Support",
        "Testing"
	]
}

